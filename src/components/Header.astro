---
import IconX from "@/assets/icons/IconX.svg";
import IconMoon from "@/assets/icons/IconMoon.svg";
import IconSearch from "@/assets/icons/IconSearch.svg";
import IconArchive from "@/assets/icons/IconArchive.svg";
import IconSunHigh from "@/assets/icons/IconSunHigh.svg";
import IconMenuDeep from "@/assets/icons/IconMenuDeep.svg";
import IconHome from "@/assets/icons/IconHome.svg";
import IconNews from "@/assets/icons/IconNews.svg";
import IconTags from "@/assets/icons/IconTags.svg";
import IconUserExclamation from "@/assets/icons/IconUserExclamation.svg";
import LinkButton from "./LinkButton.astro";
import MenuLink from "./MenuLink.astro";
import { SITE } from "@/config";

const { pathname } = Astro.url;

// Remove trailing slash from current pathname if exists
const currentPath =
  pathname.endsWith("/") && pathname !== "/" ? pathname.slice(0, -1) : pathname;

const isActive = (path: string) => {
  const currentPathArray = currentPath.split("/").filter(p => p.trim());
  const pathArray = path.split("/").filter(p => p.trim());

  return currentPath === path || currentPathArray[0] === pathArray[0];
};
---

<header
  class="fixed top-0 z-50 flex h-(--header-height) w-full max-w-full items-center border-b bg-background"
>
  <div
    id="nav-container"
    class="relative mx-3 flex max-h-[calc(var(--header-height)-1px)] w-full border-x px-4 md:mx-8 lg:mx-12"
  >
    <div
      class="absolute bottom-[-4.5px] left-[-4.5px] z-50 h-2 w-2 rotate-45 rounded-[1px] border border-blue-200 bg-white dark:border-blue-300/25"
    >
    </div>
    <div
      class="absolute right-[-4.5px] bottom-[-4.5px] z-50 h-2 w-2 rotate-45 rounded-[1px] border border-blue-200 bg-white dark:border-blue-300/25"
    >
    </div>
    <div
      id="top-nav-wrap"
      class="relative flex w-full items-baseline justify-between bg-background p-4 sm:items-center sm:py-6"
    >
      <a
        href="/"
        class="absolute py-1 text-xl leading-8 font-semibold whitespace-nowrap underline underline-offset-auto sm:static sm:my-auto sm:text-2xl sm:leading-none"
      >
        {SITE.title}
      </a>
      <nav
        id="nav-menu"
        class="flex w-full flex-col items-center sm:ml-2 sm:flex-row sm:justify-end sm:space-x-4 sm:py-0"
      >
        <div class="flex flex-row self-end p-2 sm:hidden">
          <button
            id="menu-btn"
            class="relative mx-8"
            aria-label="Open Menu"
            aria-expanded="false"
            aria-controls="menu-items"
          >
            <IconX id="close-icon" class="hidden" />
            <IconMenuDeep id="menu-icon" />
          </button>
          <button
            id="theme-btn"
            class="relative hover:[&>svg]:stroke-accent"
            title="Toggles light & dark"
            aria-label="auto"
            aria-live="polite"
          >
            <IconMoon
              class="absolute top-[50%] left-[50%] -translate-[50%] scale-100 rotate-0 transition-all dark:scale-0 dark:-rotate-90"
            />
            <IconSunHigh
              class="absolute top-[50%] left-[50%] -translate-[50%] scale-0 rotate-90 transition-all dark:scale-100 dark:rotate-0"
            />
          </button>
        </div>
        <ul
          id="menu-items"
          class:list={[
            "mt-4 grid w-44 grid-cols-2 place-content-center gap-2",
            "[&>li>a]:block [&>li>a]:px-4 [&>li>a]:py-3 [&>li>a]:text-center [&>li>a]:font-medium [&>li>a]:hover:text-accent sm:[&>li>a]:px-2 sm:[&>li>a]:py-1",
            "hidden",
            "sm:mt-0 sm:ml-0 sm:flex sm:w-auto sm:gap-x-5 sm:gap-y-0",
          ]}
        >
          <li class="col-span-2">
            <a href="/posts" class:list={{ "active-nav": isActive("/posts") }}>
              Posts
            </a>
          </li>
          <li class="col-span-2">
            <a href="/tags" class:list={{ "active-nav": isActive("/tags") }}>
              Tags
            </a>
          </li>
          <li class="col-span-2">
            <a href="/about" class:list={{ "active-nav": isActive("/about") }}>
              About
            </a>
          </li>
          {
            SITE.showArchives && (
              <li class="col-span-2">
                <LinkButton
                  href="/archives"
                  class:list={[
                    "focus-outline flex justify-center p-3 sm:p-1",
                    {
                      "active-nav [&>svg]:stroke-accent": isActive("/archives"),
                    },
                  ]}
                  ariaLabel="archives"
                  title="Archives"
                >
                  <IconArchive class="hidden sm:inline-block" />
                  <span class="sm:sr-only">Archives</span>
                </LinkButton>
              </li>
            )
          }
          <li class="col-span-1 flex items-center justify-center">
            <LinkButton
              href="/search"
              class:list={[
                "focus-outline flex p-3 sm:p-1",
                { "[&>svg]:stroke-accent": isActive("/search") },
              ]}
              ariaLabel="search"
              title="Search"
            >
              <IconSearch />
              <span class="sr-only">Search</span>
            </LinkButton>
          </li>
          {
            SITE.lightAndDarkMode && (
              <li class="col-span-1 flex items-center justify-center">
                <button
                  id="theme-btn"
                  class="focus-outline relative size-12 p-4 sm:size-8 hover:[&>svg]:stroke-accent"
                  title="Toggles light & dark"
                  aria-label="auto"
                  aria-live="polite"
                >
                  <IconMoon class="absolute top-[50%] left-[50%] -translate-[50%] scale-100 rotate-0 transition-all dark:scale-0 dark:-rotate-90" />
                  <IconSunHigh class="absolute top-[50%] left-[50%] -translate-[50%] scale-0 rotate-90 transition-all dark:scale-100 dark:rotate-0" />
                </button>
              </li>
            )
          }
        </ul>
      </nav>
    </div>
  </div>
  <div
    id="menu-drawer-mask"
    class="pointer-events-auto fixed inset-0 z-110 hidden bg-black/40 dark:bg-black/40"
  >
  </div>
  <div id="menu-drawer" class="fixed bottom-0 z-120 hidden w-full">
    <div
      class="right-0 left-0 mx-3 mt-24 overflow-x-clip overflow-y-auto rounded-tl-lg rounded-tr-lg border bg-background shadow-lg focus:outline-hidden focus-visible:outline-hidden"
    >
      <ul class="flex h-fit list-none flex-col gap-1 p-2.5">
        <li>
          <MenuLink
            href="/"
            class:list={{ "active-nav [&>svg]:stroke-accent": isActive("/") }}
            ariaLabel="Go to the home page"
            title="Go to the home page"
          >
            <IconHome />
            Go to the home page
          </MenuLink>
          <hr class="my-2 dark:border-gray-600/20" />
        </li>
        <li>
          <MenuLink
            href="/posts"
            class:list={{
              "active-nav [&>svg]:stroke-accent": isActive("/posts"),
            }}
            ariaLabel="Posts"
            title="Posts"
          >
            <IconNews />
            Posts
          </MenuLink>
        </li>
        <li>
          <MenuLink
            href="/tags"
            class:list={{
              "active-nav [&>svg]:stroke-accent": isActive("/tags"),
            }}
            ariaLabel="Tags"
            title="Tags"
          >
            <IconTags />
            Tags
          </MenuLink>
        </li>
        <li>
          <MenuLink
            href="/about"
            class:list={{
              "active-nav [&>svg]:stroke-accent": isActive("/about"),
            }}
            ariaLabel="About"
            title="About"
          >
            <IconUserExclamation />
            About
          </MenuLink>
          {!SITE.showArchives && <hr class="my-2 dark:border-gray-600/20" />}
        </li>
        {
          SITE.showArchives && (
            <li>
              <MenuLink
                href="/archives"
                class:list={{
                  "active-nav [&>svg]:stroke-accent": isActive("/archives"),
                }}
                ariaLabel="Archives"
                title="Archives"
              >
                <IconArchive />
                Archives
              </MenuLink>
              <hr class="my-2 dark:border-gray-600/20" />
            </li>
          )
        }
        <li>
          <MenuLink
            href="/search"
            class:list={[
              "focus-outline flex p-3 sm:p-1",
              { "[&>svg]:stroke-accent": isActive("/search") },
            ]}
            ariaLabel="Search"
            title="Search"
          >
            <IconSearch />
            Search
          </MenuLink>
          <hr class="my-2 dark:border-gray-600/20" />
        </li>
        <li class="mt-3 flex flex-col gap-2">
          <button
            id="menu-theme-btn"
            class="group fv-style dark:text-offgray-50 border-offgray-200/50 dark:border-offgray-400/20 bg-offgray-50/60 dark:bg-offgray-300/5 hover:bg-offgray-100/50 dark:hover:bg-offgray-200/10 flex h-9 items-center justify-center gap-1.5 rounded-sm border px-3 text-sm tracking-tight text-nowrap [box-shadow:hsl(218,_13%,_50%,_0.1)_0_-2px_0_0_inset] transition-colors duration-75 select-none hover:[box-shadow:none] disabled:cursor-not-allowed disabled:opacity-50 dark:[box-shadow:hsl(218,_13%,_70%,_0.08)_0_-2px_0_0_inset] dark:hover:[box-shadow:none]"
            aria-label="Turn Dark Mode On"
          >
            Turn Dark Mode On
          </button>
        </li>
        <li class="w-full">
          <button
            id="menu-drawer-close"
            class="group fv-style dark:text-offgray-50 hover:bg-offgray-100/50 dark:hover:bg-offgray-500/10 flex h-9 w-full items-center justify-center gap-3 rounded-sm border border-transparent px-3 text-base tracking-tight text-nowrap transition-colors duration-75 select-none disabled:cursor-not-allowed disabled:opacity-50"
            aria-label="Close Menu"
            type="button"
          >
            Close Menu
          </button>
        </li>
      </ul>
    </div>
  </div>
</header>

<script>
  function toggleNav() {
    const menuBtn = document.querySelector("#menu-btn");
    const menuDrawer = document.querySelector("#menu-drawer");
    const menuDrawerMask = document.querySelector("#menu-drawer-mask");
    const menuDrawerCloseButton = document.querySelector("#menu-drawer-close");
    const menuIcon = document.querySelector("#menu-icon");
    const closeIcon = document.querySelector("#close-icon");

    if (
      !menuBtn ||
      !menuDrawer ||
      !menuDrawerMask ||
      !menuDrawerCloseButton ||
      !menuIcon ||
      !closeIcon
    )
      return;

    const click_event = () => {
      const openMenu = menuBtn.getAttribute("aria-expanded") === "true";

      menuBtn.setAttribute("aria-expanded", openMenu ? "false" : "true");
      menuBtn.setAttribute("aria-label", openMenu ? "Open Menu" : "Close Menu");
      menuDrawer.classList.toggle("hidden");
      menuDrawerMask.classList.toggle("hidden");
      menuIcon.classList.toggle("hidden");
      closeIcon.classList.toggle("hidden");
    };

    menuBtn.addEventListener("click", click_event);
    menuDrawerMask.addEventListener("click", click_event);
    menuDrawerCloseButton.addEventListener("click", click_event);
  }

  toggleNav();

  // Runs on view transitions navigation
  document.addEventListener("astro:after-swap", toggleNav);
</script>
